rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクション：認証済みユーザーは自分のデータのみ読み書き可能
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // カスタムタブコレクション：認証済みユーザーは自分のタブまたは共有されたタブを読み取り可能
    match /customTabs/{tabId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        (resource.data.isShared == true)
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 手動文書コレクション：認証済みユーザーは自分の文書のみ読み書き可能（管理者は全件読み取り可能）
    match /manualDocuments/{docId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // カスタムタブコンポーネント：カスタムタブと同じルール
    match /customTabComponents/{componentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // TODOコレクション：認証済みユーザーは自分のTODOまたは共有されたTODOを読み取り可能
    match /todos/{todoId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith)
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith)
      );
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // チャットセッションコレクション：認証済みユーザーは自分のセッションのみ読み書き可能
    match /chatSessions/{sessionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // イベントコレクション：認証済みユーザーは自分のイベントまたは共有されたイベントを読み取り可能
    match /events/{eventId} {
      // 個別ドキュメントの読み取り
      allow get: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith)
      );
      // クエリベースの読み取り（リスト）
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith)
      );
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 営業案件コレクション：認証済みユーザーは自分の案件のみ読み書き可能（管理者は全件読み取り可能）
    match /salesCases/{caseId} {
      // 個別ドキュメントの読み取り
      allow get: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      // クエリベースの読み取り（リスト）
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // 進捗メモコレクション：認証済みユーザーは自分のメモのみ読み書き可能（管理者は全件読み取り可能）
    match /progressNotes/{noteId} {
      // 個別ドキュメントの読み取り
      allow get: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      // クエリベースの読み取り（リスト）
      allow list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // 要約コレクション：認証済みユーザーは自分の要約のみ読み書き可能
    match /summaries/{summaryId} {
      allow read: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      allow update, delete: if request.auth != null && (
        resource.data.createdBy == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // サイドバー設定コレクション：認証済みユーザーは全員読み取り可能、管理者のみ書き込み可能
    match /sidebarConfig/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // その他のコレクション：認証済みユーザーのみアクセス可能
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
